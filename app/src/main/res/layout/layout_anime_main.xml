<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:id="@+id/layout"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_marginHorizontal="@dimen/border_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#181A20">

        <TextView
            android:id="@+id/animeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:maxLength="22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/addToFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_bookmark_border_24_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shareAnime"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"

            />
        <ImageView
            android:id="@+id/shareAnime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:id="@+id/rateSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/animeName">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_star_border_24"/>
            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/main"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

        </LinearLayout>

        <TextView
            android:id="@+id/animeYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/rateSpace"
            android:layout_marginStart="10dp"
            android:maxLength="4"
            app:layout_constraintTop_toTopOf="@id/rateSpace"
            app:layout_constraintStart_toEndOf="@id/rateSpace"/>
        <TextView
            android:id="@+id/badgePg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:text="13+"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/back_badge"
            android:maxLength="3"
            android:layout_marginStart="15dp"
            app:layout_constraintBaseline_toBaselineOf="@id/animeYear"
            app:layout_constraintStart_toEndOf="@id/animeYear"/>
        <TextView
            android:id="@+id/badgeCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:text="Japan"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/back_badge"
            android:layout_marginStart="15dp"
            app:layout_constraintBaseline_toBaselineOf="@id/animeYear"
            app:layout_constraintStart_toEndOf="@id/badgePg"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:text="Subtitle"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/back_badge"
            android:layout_marginStart="15dp"
            app:layout_constraintBaseline_toBaselineOf="@id/animeYear"
            app:layout_constraintStart_toEndOf="@id/badgeCountry"/>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rateSpace"
            >

        <Button
            android:id="@+id/playButton"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:background="@drawable/color_back_interest"
            android:text="Play"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:icon="@drawable/ic_baseline_play_circle_24"
            app:iconTint="@color/white"
             />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/back_add_to_my_list"
            android:text="My list"
            android:textColor="@color/white"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/playButton"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Genre"
            app:layout_constraintTop_toBottomOf="@id/buttons"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:maxLines="3"
            app:layout_constraintTop_toBottomOf="@id/genre"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episodes"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text"/>

        <TextView
            android:id="@+id/episodesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/episodes"
            android:layout_marginTop="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>