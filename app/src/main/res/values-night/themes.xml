<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Animex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainC</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primaryO</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@color/primaryS</item>
        <item name="android:windowBackground">@color/primaryS</item>
        <item name="android:statusBarColor">@color/primaryS</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Animex.bottomSheet</item>

        <item name="snackbarStyle">@style/snacKBar</item>
        <item name="snackbarButtonStyle"> @style/SnackBarButton</item>

    </style>

    <style name="Theme.Animex.bottomSheet">
        <item name="android:windowBackground">#00181A20</item>

    </style>

    <style name="snacKBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/snackBar</item>

    </style>

    <style name="SnackBarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="snackBar">
        <item name="colorOnPrimary">@color/helpColor</item>
        <item name="colorOnSurface">@color/primaryS</item>
    </style>
</resources>